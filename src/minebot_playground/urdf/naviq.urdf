<?xml version="1.0"?>
<robot name="naviq">

    <material name="black"> <color rgba="0.15 0.15 0.15 1"/> </material>
    <material name="dark_grey"> <color rgba="0.1 0.1 0.1 1"/> </material>
    <material name="blue"> <color rgba="0 0 1 1"/> </material>
    <material name="white"> <color rgba="1 1 1 1"/> </material>
    <material name="lens_black"> <color rgba="0.05 0.05 0.05 1"/> </material>

    <link name="base_link">
        <visual>
            <geometry> <box size="0.6 0.4 0.2"/> </geometry>
            <origin xyz="0 0 0.15" rpy="0 0 0"/>
            <material name="black"/>
        </visual>
        <collision>
            <geometry> <box size="0.6 0.4 0.2"/> </geometry>
            <origin xyz="0 0 0.15" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="5.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
            <origin xyz="0 0 0.15" rpy="0 0 0"/>
        </inertial>
    </link>

    <link name="left_wheel">
        <collision>
            <geometry> <cylinder radius="0.1" length="0.05"/> </geometry>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
        </collision>
        <inertial>
            <mass value="0.2"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.002"/>
        </inertial>
    </link>

    <link name="right_wheel">
        <collision>
            <geometry> <cylinder radius="0.1" length="0.05"/> </geometry>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
        </collision>
        <inertial>
            <mass value="0.2"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.002"/>
        </inertial>
    </link>

    <link name="left_track">
        <visual>
            <geometry><box size="0.6 0.12 0.18"/></geometry>
            <material name="dark_grey"/>
        </visual>
    </link>

    <link name="right_track">
        <visual>
            <geometry><box size="0.6 0.12 0.18"/></geometry>
            <material name="dark_grey"/>
        </visual>
    </link>

    <link name="camera_link">
        <visual>
            <origin xyz="0.01 0 0" rpy="0 0 0"/>
            <geometry> <box size="0.04 0.08 0.04"/> </geometry>
            <material name="white"/>
        </visual>
        <visual>
            <origin xyz="0.035 0 0" rpy="0 0 0"/>
            <geometry> <cylinder radius="0.03" length="0.01"/> </geometry>
            <material name="lens_black"/>
        </visual>
        <collision>
            <geometry> <box size="0.04 0.08 0.04"/> </geometry>
        </collision>
        <inertial>
            <mass value="0.01"/>
            <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.00001"/>
        </inertial>
    </link>
    <link name="general_gas_sensor">
        <visual>
            <geometry> <box size="0.18 0.1 0.02"/> </geometry>
            <material name="blue"/>
        </visual>
    </link>
    <link name="carbon_monoxide_gas_sensor">
        <visual>
            <geometry> <box size="0.18 0.1 0.02"/> </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.225 0.1" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.225 0.1" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    <joint name="base_to_left_track" type="fixed">
        <parent link="base_link"/>
        <child link="left_track"/>
        <origin xyz="0 0.25 0.1" />
    </joint>
    <joint name="base_to_right_track" type="fixed">
        <parent link="base_link"/>
        <child link="right_track"/>
        <origin xyz="0 -0.25 0.1" />
    </joint>
    <joint name="base_camera_joint" type="fixed">
        <parent link="base_link"/>
        <child link="camera_link"/>
        <origin xyz="0.31 0 0.26" rpy="0 0 0"/>
    </joint>
    <joint name="base_general_gas_sensor" type="fixed">
        <parent link="base_link"/>
        <child link="general_gas_sensor"/>
        <origin xyz="0.10 0.12 0.26" rpy="0 0 0"/>
    </joint>
    <joint name="base_carbon_monoxide_gas_sensor" type="fixed">
        <parent link="base_link"/>
        <child link="carbon_monoxide_gas_sensor"/>
        <origin xyz="0.10 -0.12 0.26" rpy="0 0 0"/>
    </joint>

    <gazebo>
        <plugin name="gz::sim::systems::DiffDrive" filename="gz-sim-diff-drive-system">
            <left_joint>base_left_wheel_joint</left_joint>
            <right_joint>base_right_wheel_joint</right_joint>
            <wheel_separation>0.45</wheel_separation>
            <wheel_radius>0.1</wheel_radius>
            <topic>/cmd_vel</topic>
        </plugin>
    </gazebo>

    <gazebo reference="camera_link">
        <sensor name="camera_sensor" type="camera">
            <update_rate>20</update_rate>
            <camera>
                <horizontal_fov>1.396</horizontal_fov>
                <image>
                    <width>800</width>
                    <height>600</height>
                    <format>R8G8B8</format>
                </image>
                <clip>
                    <near>0.02</near>
                    <far>300</far>
                </clip>
            </camera>
            <plugin name="camera_plugin" filename="libgazebo_ros_camera.so">
                <frame_name>camera_link</frame_name>
                <topic_name>/camera/image_raw</topic_name>
                <camera_info_topic_name>/camera/camera_info</camera_info_topic_name>
            </plugin>
        </sensor>
    </gazebo>

</robot>